{
    "name": "Qd_Mlp",
    "n_gpu": 1,

    "arch": {
        "type": "MLP",
        "args": {
            "input_dim": 13,
            "output_dim": 2,
            "n_hid": [50]
            }
        },

    "data_loader": {
        "type": "BostonHousingDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "test_split": 0.1,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.003,
            "weight_decay": 1e-6,
            "momentum": 0.9
        }
    },
    "loss": "mse_loss",
    "metrics": [
        "mse",
        "picp",
        "mpiw"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "Quality_driven_PI",
        "epochs": 200,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true,
        "loss": {
            "type_in": "pred_intervals",
            "alpha": 0.1,
            "loss_type": "qd_soft",
            "censor_R": false,
            "soften": 160,
            "lambda_in": 5,
            "sigma_in": 0.5
        }

    },
      "evaluater": {
        "result_dir": "saved/",
        "verbosity": 2,
        "loss": {
            "type_in": "pred_intervals",
            "alpha": 0.1,
            "loss_type": "qd_soft",
            "censor_R": false,
            "soften": 160,
            "lambda_in": 5,
            "sigma_in": 0.5
        },
          "visualization": {
            "scatter": true
        }
    }
}
