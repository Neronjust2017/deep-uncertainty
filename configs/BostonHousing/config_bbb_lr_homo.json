{
    "name": "BH_Bayes_LR_MLP_homo",
    "n_gpu": 1,
    "arch": {
        "Bayes": "Bayes_By_Backprop",
        "type": "Bayes_MLP_LR",
        "args": {
            "input_dim": 13,
            "output_dim": 1,
            "n_hid": [
                50,
                50
            ],
            "prior_sig": 10,
            "regression_type": "homo"
        }
        },
        "data_loader": {
            "type": "BostonHousingDataLoader",
            "args": {
                "data_dir": "data/",
                "batch_size": 128,
                "shuffle": true,
                "validation_split": 0.1,
                "test_split": 0.1,
                "num_workers": 0
            }
        },
        "optimizer": {
            "type": "Adam",
            "args": {
                "lr": 0.001,
                "weight_decay": 0,
                "amsgrad": true
            }
        },
        "loss": "log_gaussian_homo",
        "metrics": [
            "mse_homo",
            "picp_homo",
            "mpiw_homo"
        ],
        "lr_scheduler": {
            "type": "StepLR",
            "args": {
                "step_size": 50,
                "gamma": 0.1
            }
        },
        "trainer": {
            "type": "Bayes_By_Backprop",
            "epochs": 100,
            "save_dir": "saved/",
            "save_period": 1,
            "verbosity": 2,
            "monitor": "min val_loss",
            "early_stop": 10,
            "tensorboard": true
        },
        "evaluater": {
            "result_dir": "saved/",
            "verbosity": 2,
            "visualization": {
                "scatter": true
            }
        }
}