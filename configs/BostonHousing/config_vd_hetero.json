{
    "name": "Vd_Mlp_hetero",
    "n_gpu": 1,

    "arch": {
        "Bayes": "Variational_dropout",
        "type": "Vd_Mlp",
        "args": {
            "input_dim": 13,
            "output_dim": 1,
            "n_hid": [50, 50],
            "regression_type": "hetero"
        }
        },

    "data_loader": {
        "type": "BostonHousingDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "test_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "log_gaussian_hetero",
    "metrics": [
        "mse_hetero",
        "picp_hetero",
        "mpiw_hetero"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "Variational_dropout",
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    },
      "evaluater": {
        "result_dir": "saved/",
        "verbosity": 2,
            "visualization": {
            "scatter": true
        }
    }
}
