{
    "name": "deep_ensemble_MLP",
    "n_gpu": 1,

    "arch": {
        "type": "MLP",
        "args": {
            "input_dim": 13,
            "output_dim": 2,
            "n_hid": [50, 50]
            }
        },

    "data_loader": {
        "type": "BostonHousingDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "test_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "gaussian_nll",
    "metrics": [
        "mse",
        "picp",
        "mpiw"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "Deep_Ensemble",
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true,
        "loss": {
            "alpha": 0.1,
            "epsilon": 0.1
        }
    },
      "evaluater": {
        "result_dir": "saved/",
        "verbosity": 2,
           "visualization": {
            "scatter": true
        }

    }
}
